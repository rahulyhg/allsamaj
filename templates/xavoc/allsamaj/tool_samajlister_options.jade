.xepan-tool-options(id='{$_name}', style='display: none', for-xepan-component='xavoc/allsamaj/Tool_SamajLister')
  .xepan-cms-group-panel.clearfix
    h3.collapsed(data-toggle='collapse', data-target='#collapse-carousel', aria-expanded='false')
      span All Samaj List
    #collapse-carousel.xepan-cms-tools-bar-panel.row-fluid.collapse.in
      .panel-body
        table.table.table-condensed.table-hover
          tr.show-text
            .xepan-tool-option
              td.xepan-tool-option-title Show Search Bar
              td.xepan-tool-option-value
                select#show_text(data-attr='show_search_bar', data-defaultvalue='true')
                  option(value='true') Yes
                  option(value='false') No
          tr
            td
              | Records on a page
            td
              input#show-record-on-page(data-attr='no_of_record_on_page', type='number', name='no_of_record_on_page', data-defaultvalue='10')
          tr
            .xepan-tool-option
              td.xepan-tool-option-title No of Column in Row 
              td.xepan-tool-option-value(colspan='2')
                select.chosen-select.option-category(id='{$_name}_dropdown', style='width:150px;', data-attr='no_of_column', data-defaultvalue='4')
                  option(value='12') 1
                  option(value='6') 2
                  option(value='4') 3
                  option(value='3') 4
                  option(value='2') 6
                  option(value='1') 12
          tr
            td
              | Detail URl
            td
              input(type='text', name='details-url', data-attr='detail_url_page')

          tr
            td
              | Include Featured
            td
              select(name='include_featured_samaj_also', data-attr='include_featured_samaj_also', value=1)
                option(value='yes') Yes
                option(value='no') No

          tr
            td
              | Show City Wise 
            td
              select(name='show_city_list', data-attr='show_city_list', data-defaultvalue='udaipur')
                option(value='udaipur') Udaipur
                option(value='kota') Kota

script(type='text/javascript').
  $('\\#{$_name} [data-attr]').on('change',function(){
  $(current_selected_component).attr($(this).data('attr'),$(this).val());
  });
  $('\\#{$_name}').on('show',function(event){
  $('\\#{$_name} [data-attr]').each(function(index,value){
  $(this).val($(current_selected_component).attr($(this).data('attr')));
  });
  });
