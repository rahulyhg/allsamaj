.xepan-tool-options(id='{$_name}', style='display: none', for-xepan-component='xavoc/allsamaj/Tool_SamajNews')
  .xepan-cms-group-panel.clearfix
    h3.collapsed(data-toggle='collapse', data-target='#collapse-carousel', aria-expanded='false')
      span All Samaj News
    #collapse-carousel.xepan-cms-tools-bar-panel.row-fluid.collapse.in
      .panel-body
        table.table.table-condensed.table-hover
          tr
            td
              | Detail URL
            td
              input(type='text', name='details-url', data-attr='detail_url_page')
          tr
            td
              |Show No of Records
            td
              input#show-record-on-page(data-attr="no_of_record" type="number" name="no_of_row" data-defaultvalue="10")
          tr
            .xepan-tool-option
              td.xepan-tool-option-title No of Column in Row 
              td.xepan-tool-option-value(colspan='2')
                select.chosen-select.option-category(id='{$_name}_dropdown', style='width:150px;', data-attr='no_of_column', data-defaultvalue='4')
                  option(value='12') 1
                  option(value='6') 2
                  option(value='4') 3
                  option(value='3') 4
                  option(value='2') 6
                  option(value='1') 12
      
script(type='text/javascript').
  $('\\#{$_name} [data-attr]').on('change',function(){
  $(current_selected_component).attr($(this).data('attr'),$(this).val());
  });
  $('\\#{$_name}').on('show',function(event){
  $('\\#{$_name} [data-attr]').each(function(index,value){
  $(this).val($(current_selected_component).attr($(this).data('attr')));
  });
  });
